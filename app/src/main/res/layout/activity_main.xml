<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btAlterarVersao"
        android:text="Lista Versões"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/tvVersaoAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textColor="#ff0000"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btPessoaFisica"
        android:text="Pessoa Física"
        android:textAllCaps="false"
        android:onClick="abrirCadastroPessoaFisica"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btPessoaJuridica"
        android:text="Pessoa Jurídica"
        android:textAllCaps="false"
        android:onClick="abrirCadastroPessoaJuridica"
        />

</LinearLayout>
